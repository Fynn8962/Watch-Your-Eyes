<Window x:Class="Eye_Care_App.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="300"
        Height="100"
        Topmost="True"
        ShowInTaskbar="False">
    <Border CornerRadius="10" Background="#FF323232" BorderBrush="Yellow"  BorderThickness="1" Opacity="0.9" Padding="10">
        <TextBlock x:Name="NotificationText" Foreground="White" FontSize="16" TextWrapping="Wrap"/>
    </Border>
</Window>
