<Window x:Class="Eye_Care_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eye_Care_App"
        mc:Ignorable="d"
        Title="Eye-Car"
        Height="380"
        Width="400"
        Background="#FF323232"
        Foreground="White"
        ResizeMode="CanMinimize">

    <Grid Margin="10">

        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="3"
               HorizontalAlignment="Center"
               FontSize="25"
               Foreground="White"
               Content="Watch Your Eyes!"/>

        <Button Grid.Row="0"
                Grid.Column="1"
                Content="Info"
                Width="36"
                Height="20"
                Margin="0,55,0,0"
                
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Foreground="White"
                Background="Gray"
                Click="InfoButton_Click"/>

        <ComboBox x:Name="SetCountdown"
                  Grid.Row="1"
                  Grid.Column="2"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">

            <ComboBoxItem Content="15 Min." Tag="15"/>
            <ComboBoxItem Content="20 Min." Tag="20"/>
            <ComboBoxItem Content="25 Min." Tag="25"/>
            <ComboBoxItem Content="30 Min." Tag="30"/>
            <ComboBoxItem Content="35 Min." Tag="35"/>
            <ComboBoxItem Content="40 Min." Tag="40"/>
            <ComboBoxItem Content="45 Min." Tag="45"/>
            <ComboBoxItem Content="50 Min." Tag="50"/>
            <ComboBoxItem Content="55 Min." Tag="55"/>
            <ComboBoxItem Content="60 Min." Tag="60"/>
        </ComboBox>

        <TextBlock x:Name="CountdownText"
                   Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="60"
                   Text="00:00"/>

        <Button x:Name="StartButton"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Width="200"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="25"
                Foreground="White"
                Background="Gray"
                Content="Start"
                Click="StartButton_Click"/>
    </Grid>
</Window>
